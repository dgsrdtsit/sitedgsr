
{% extends "base.html.twig" %}
{% block stylesheets %}


	{%endblock%}
	{% block content %}
		<div class="row mt-5">
			{% for actualite in actualites %}
				{% if actualite.urlVideo != null %}
					<div  class="col-lg-4 col-md-4 col-sm-6 " style="padding-bottom: 5px;">
						<div  class="card mdl-shadow--3dp">
							<div class="d-flex justify-content-center">
								<div>
									<h6 class="text-center">{{actualite.title}}</h6>
								</div>
							</div>
							<div class="d-flex justify-content-center">
								<div>
									<em>{{ actualite.datePub | date("d M Y")}}</em>	
								</div>
							</div>
							<div>
								<iframe class="rounded" 
								src = "{{ actualite.urlVideo }}"
								frameborder="0"
								title="Example2"
								allowfullscreen
								width="100%"
								height = "80%"
								></iframe>
							</div>
						</div>
					</div>
				{% endif %}
			{% endfor %}
		</div>

		{%endblock%}

		{% block javascripts %}
		{% endblock %}