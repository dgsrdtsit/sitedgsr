{% extends 'base.html.twig' %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/actualites.css') }}">
{% endblock %}

{% block content %}

	<div class="row">
		{% for actualite in actualites %}
			<div class="col-lg-3 col-md-3 mt-2">
				<div class="card" style="width: 18rem;">
					<img src="{{vich_uploader_asset(actualite, 'imageFile')  }}" class="card-img-top" alt="...">
					<div class="card-body pt-0">
						<h6 class="card-title">{{ actualite.title}} </h6>
						<div class=" p-0">
							
							<div class="d-flex">
								<div class="">
									<a class="js-actu_show btn btn-secondary " href="{{ path('actualite.show', { id : actualite.id }) }}">Lire</a>
								</div>
								<div class="ml-auto " style="font-style : italic;">
									{{ actualite.datePub | date("d M Y")}}
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>


	<button style="display : none;" id="bouton" type="button" class="btn btn-primary" data-toggle="modal" data-target=".bd-example-modal-xl">Extra large modal</button>

	<div class="modal fade bd-example-modal-xl" tabindex="-1" role="dialog" aria-labelledby="myExtraLargeModalLabel" aria-hidden="true">
		<div class="modal-dialog modal-xl" role="document">
			<div class="modal-content" style="background-color : #fff">

				<div class="actu_detail " >
					<div class="modal-header">
						<h5 class="modal-title actu_title"  id="exampleModalCenterTitle"></h5>
						<button type="button" class="close" data-dismiss="modal" aria-label="Close">
							<span aria-hidden="true">&times;</span>
						</button>
					</div>
					<div class="main-wrapper" oncontextmenu="return false">
						<div class="container-fluid ">
							<div class="row">
								<div class="col-lg-6">
									<div class="row ten-cols">
										<div class="col-md-6 no-space">
											<div class="content-box bg-one">
												<div class="content-box-expend">
													<a class="content-box-title">
														<div class="content-box-icon">
															<img class="imageflottante" class="img-fluid img1 rounded mb-4" src="" alt="">
														</div> 
													</a>
												</div>
											</div>
											<div class="content-box bg-two">
												<div class="content-box-expend">
													<a class="content-box-title">
														<div class="content-box-icon">
															<img class="imageflottante" class="img-fluid img2 rounded mb-4" src="" alt="">
														</div>
													</a>
												</div>
											</div>
										</div>
										<div class="col-md-6 no-space">
											<div class="content-box bg-three">
												<div class="content-box-expend">
													<a class="content-box-title">
														<div class="content-box-icon">
															<img class="imageflottante" class="img-fluid img3 rounded mb-4" src="" alt="">
														</div>
													</a>
												</div>
											</div>
											<div class="content-box bg-four">
												<div class="content-box-expend">
													<a class="content-box-title">
														<div class="content-box-icon">
															<img class="imageflottante" class="img-fluid img4 rounded mb-4" src="" alt="">
														</div>
													</a>
												</div>
											</div>
										</div>
									</div>
								</div>
								<div class="col-lg-6">
									<p class="actu_content pb-5"> </p>

								</div>

							</div>


						</div>
					</div>

				</div>
			</div>
		</div>
	</div>


	{%endblock%}

	{% block javascripts %}
		<script src="{{ asset('js/actualites_ajax.js') }}"></script>
	{% endblock %}
